@charset "UTF-8";
.card{
	border: 1px solid rgb(111, 204, 237);
	border-radius: 10px;
}


#work-status,#answered-issue{
	width: 55%;
}

#hashtag-chart,#mentioned{
	width: 43%;
}
#status-list{
	display: flex;
	justify-content: space-between;
	padding: 5px 10px;
}
.list-item{
	width: 80px;
	text-align: center;
	padding: 5px;
}
.cnt{
	border-top: 1px solid white;
}
.mention-emp{
	font-weight: bold;
}
.mention-content{
	font-weight: bold;
}
.emp_card{
	display:none;
	width: 300px;
 	height: 150px; 
 	position: absolute; 
 	left:0;
 	top:0;
 	background:white;
 	border: 1px solid black;
 	border-radius: 10px;
}
.work-search{
	display: flex;
}