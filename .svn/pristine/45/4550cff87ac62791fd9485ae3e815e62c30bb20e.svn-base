@charset "UTF-8";
p{
	margin: 0;
}

.wrapper{
	margin: 0 auto;
}

.title{
	font-size: 24px;
	margin: 10px 20px;
	display: inline-block;
}

section{
	margin-top: 10px;
	display: flex;
}

.card{
	margin: 0;
}

.icon:hover{
	cursor: pointer;
}
/* loginEmp */
#loginEmp{
	width: 20%;
	height: 250px;
	display: flex;
	justify-content: center;
}
.divContainer{
	margin: auto;
}
.imgContainer{
	width: 100px;
	height: 100px;
}

.empInfo{
	font-weight: bold;
}
.empDep{
	font-size: 14px;
	color: gray;
}
.img{
	width: 100%;
	border-radius: 50%;
}
/* todo */
#todo{
	width: 30%;
	height: 250px;
	margin-left: 20px;
}
#todo_header{
	display: flex;
}
#todo_header span{
	margin-top: 15px;
}
/* recent Notice */
#recentNotice{
	margin-left: 20px;
	width: 48%;
	height: 250px;
}
/* ehr */
#ehr{
	width: 250px;
	height: 450px;
}
#ehr-container{
	padding-top: 30px;
}
.ehrTime_check{
	margin-top: 10px;
}
.timeCheck{
	font-size: 12px;
	margin-top: 10px;
	display: flex;
	justify-content: space-between;
}
.ehr_button{
	margin-top: 10px;
}
.ehrClick{
	display: flex;
	justify-content: space-between;
}
.ehrClick button{
	width: 100px;
}

/* work */
#work{
	width: 78%;
	margin-left: 30px;
}
/* menu */
#menu{
	width: 20%;
}
/* mention */
#doc{
	width: 78%;
	margin-left: 30px;
}

