<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>

<head>
	<link rel="stylesheet" href="<%=request.getContextPath()%>/resources/css/community.css">
	<link rel="stylesheet" href="<%=request.getContextPath() %>/resources/bootstrap/plugins/summernote/summernote-bs4.min.css">
</head>

<title></title>

<body>
	<div class="wrapper">
		<section class="content-header ">
			<div class="row md-2">
				<div class="col-sm-12">
					<h2>게시글 작성</h2>
				</div>
			</div>
		</section>

		<section class="content card card-outline card-info">
			<div class="container-fluid">
				<div class="row card-header">
					<div class="col-lg-12">
						<label>게시글 작성</label>
						<button class="btn btn-secondary" style="float: right; margin-left:20px;" type="button" onclick="CloseWindow();">닫기</button>
						<button class="btn btn-info" style="float: right;" type="button" onclick="">작성</button>
					</div>
				</div>

				<div class="card-body">
						<div class="row ">
							<label class="col-2">제목</label>
							<input class="form-control col-10 mb-2" type="text" id="" name='' class="form-control" placeholder="제목을 입력해주세요">

							<label class="col-2">작성자</label>
							<input class="form-control col-10 mb-2" type="text" id="" name='' class="form-control" disabled value="홍길동">

							<label class="col-2 mt-3">내용</label>
<!-- 							<textarea class="form-control col-10 mt-3" rows="5" cols="" placeholder="소개글을 작성하세요"></textarea> -->
							<div class="col-10 mt-3">
								<textarea class="form-control col-10 mt-3" id="content" rows="5" cols="" placeholder="소개글을 작성하세요"></textarea>
							</div>

						</div>


				</div>

			</div>
		</section>




	</div>

<script>

window.onload=function(){
	summernote_go($("#content"),'<%=request.getContextPath()%>');
}



</script>


</body>


