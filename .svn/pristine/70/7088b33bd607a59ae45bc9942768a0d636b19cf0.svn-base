		    a.endDate,
		    a.job,
		    a.dname,
		    a.mtno,
		    a.photo,
		    a.mento,
		    count(b.wcode) as workCnt
				from (select
							a.name, c.ppsname, a.condition, d.startDate, d.endDate, a.job, e.dname, d.mtno, a.photo, b.mento
						from
							employee a, submentoring b, postposition c, mentoring d, department e
						where b.mento=a.eno
						and a.ppscode=c.ppscode
						and b.smno=d.smno
						and a.dno=e.dno
						and b.mentee=#{eno}
				        and b.approve=1
				        and rownum <![CDATA[<=]]> 4
		                order by d.startdate
		                )a, work b, workmanager c
		        where a.mento = c.eno
		        and c.wcode = b.wcode
		        and b.wstatus != '신고'
		        and b.wdate between TRUNC(SYSDATE,'D') and (LAST_DAY(SYSDATE))
		group by a.name,
			 	a.ppsname,
			    a.condition,
			    a.startDate,
			    a.endDate,
			    a.job,
			    a.dname,
			    a.mtno,
			    a.photo,
