<script>
// 첨부파일 추가
var dataNum=0;
function addFile_go(){
	if($('input[name="uploadFile"]').length>=(5- ${fn:length(mail.attachList)})){
		alert("파일첨부는 5개까지만 가능합니다.");
		return;
	}

	var div=$('<div>').addClass("inputRow").attr("data-no",dataNum);
	var input=$('<input>').attr({"type":"file","name":"uploadFile"}).css("display","inline");
	div.append(input).append("<button onclick='remove_go("+dataNum+");' style='border:0;outline:0;' class='badge bg-red' type='button'>X</button>");

	$('.fileInput').append(div);
	dataNum++;
}

// 첨부파일 삭제
function remove_go(dataNum){
	$('div[data-no="'+dataNum+'"]').remove();
}

// 메일 전송
function regist_go(){
	var files=$('input[name="uploadFile"]');
	for(var file of files){
		console.log(file.name+" : "+file.value);
		if(file.value == ""){
			alert("파일을 선택하세요.");
			file.focus();
			file.click();
			return;
		}
	}

	var form = document.registForm;
	form.action="mailRegist.do";
	console.log("form",form);
	if(form.title.value == ""){
		alert("제목은 필수입니다.");
		return;
	}

	// 수신자 없이 메일 전송 못하게
	var receiver = $('input[name="receiver"]').val();
	if(typeof receiver == "undefined"){
		alert("받는 사람을 선택하세요.");
		return;
	}
	form.submit();
}
</script>

<script>
// 내게쓰기
function toMeMail(){
	var data={
			'eno':'${loginUser.eno}',
			'name':'${loginUser.name}',
			'dname':'${loginUser.dname}'
	}

	if($('#toMe').is(":checked") == true){
		$('.emp_select_card').remove();
		addEmp(data, $('div[id="receiver"]'), $('#addEmp-template'));
	} else{
		$('.emp_select_card').remove();
	}
}

// 긴급 설정
function urgent(){
	if($('#emergency').is(":checked") == true){
		$('#emergency').val(1);

	}else{
		$('#emergency').val(0);
	}
}

// 다시쓰기
