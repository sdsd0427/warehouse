		$.ajax({
			url : '<%=request.getContextPath()%>/mail/insertTemp.do',
			data : formData,
			type : 'post',
			contentType : false,
			processData :false,
			success : function(res){
				alert(res);
				console.log(res);
// 				window.location.reload();
			},
			error : function(error){
				alert("error : " + error.status);
			}
		})
