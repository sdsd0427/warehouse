//탐색창에서 클릭 이벤트
$('#pdsExplorer').on("changed.jstree", function (e, data) {
	console.log("data",data);
    if(data.node.icon == "far fa-folder"){
		var upPno = data.node.id;
// 		var dist = data.node.text;

		goInOut(upPno);


		var data={
