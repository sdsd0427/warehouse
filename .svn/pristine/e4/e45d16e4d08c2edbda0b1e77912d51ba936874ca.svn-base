	if(result){
		var data={
				'eno' : ${loginUser.eno }
		}
		$.ajax({
			url : '<%=request.getContextPath()%>/pds/removeAllFile.do',
			data : data,
			type : 'post',
			success: function(res){
				console.log(res);
				if(res == 0){
					alert("삭제할 파일이 없습니다.");
				} else{
					alert(res+"개의 파일이 삭제되었습니다.");
					var upPno = $('#upPno').val();
					getPds(upPno);
				}
			},
			error:function(error){
				AjaxErrorSecurityRedirectHandler(error.status);
			}
