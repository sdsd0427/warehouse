	<select id="selectSignLineNo" resultType="String">
		SELECT 'SL' ||
		trim(nvl(max(to_char(to_number(substr(SIGNLINENO,3))+1,'000000')),'000001'))
		as SIGNLINENO
		from SIGNLINE

		union

		select nvl(null,'SL000001') as SIGNLINENO
		from
		dual
		where not exists (select SIGNLINENO
		from SIGNLINE)
	</select>
	
	
