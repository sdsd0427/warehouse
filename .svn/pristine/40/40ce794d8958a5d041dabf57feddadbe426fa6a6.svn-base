		   ,tempsave
		   ,state
		   ,takeover
		   ,d.formtext
           ,c.signrank
           ,c.signstate
           ,c.signdate
           ,c.signcheck
           ,c.scheck
		from
		    signdoc a, signline b, signer c, signform d, department e, employee f
		where a.signno = b.signno
		  and b.signlineno = c.signlineno
		  and a.sformno = d.sformno
          and a.dno = e.dno
          and c.eno = f.eno
          and tempsave = 0
          and signcheck != 0
		  and c.eno = #{eno}
