		   ,b.photo
		   ,d.sformno
		   ,d.formText
		   ,a.signno
		from
		    signdoc a, employee b, postposition c, signform d
		where a.signno is not null
		<include refid="searchApprovalDocBox" />
		and a.eno = b.eno
		and b.ppscode = c.ppscode
		and a.sformno = d.sformno
		and a.state = 5
		and a.sopen = 1
		and a.sformno=#{sFormNo}
	</select>

