	   ,vacstart
	   ,vacend
	   </if>
	) VALUES (
	    #{signNo}
	   ,#{eno}
	   ,#{dno}
	   ,#{sFormNo}
	   ,'C101'
	   ,SYSDATE
	   ,#{emergency}
	   ,#{title}
	   ,#{sOpen}
	   ,#{signContent}
	   ,#{tempSave}
	   ,1
	   ,1
	   <if test="vacStart != null">
	   ,#{vacStart}
	   ,#{vacEnd}
	   </if>
	)
</update>

