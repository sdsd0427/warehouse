	<!-- 상태가 5, 공개가 1 -->
	<select id="selectSignDocInfo" resultType="str">
		select signNo
		from signDoc
		where state = 5
		and sopen = 1
	</select>
	
	<!-- 전사문서함 저장 -->
	<update id="insertAprovalBox">
		INSERT INTO approval (
							    signno
							   ,viewcnt
							) VALUES (
							    #{signNo}
							   ,0
							)
	</update>
	
	

	
	<select id="selectSearchFAVDocList" resultType="SignDoc" parameterType="hashMap">
		SELECT
			    a.signno,
			    a.eno,
			    a.dno,
			    a.sformno,
			    a.classcode,
			    a.ddate,
			    a.emergency,
			    a.title,
			    a.edate,
			    a.sopen,
			    a.signcontent,
			    a.tempsave,
			    a.state,
			    a.takeover,
			    a.viewcnt
			FROM
			    signdoc a, FAVDOC b
			 where a.signno = b.signno
			 and b.eno = #{eno}
			<include refid="search" />
			order by b.regdate desc
	</select>
	
	<select id="selectName" resultType="str">
		SELECT
			  b.name
			FROM
			    signdoc a, employee b
			 where a.eno = b.eno
			 and a.signno = #{signNo}
    
	</select>
	
	
	
	
</mapper>