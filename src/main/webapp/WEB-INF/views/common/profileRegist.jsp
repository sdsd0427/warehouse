<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>

<section class="content-header">
	<div class="container-fluid">
		<div class="row md-2">
			<div class="col-sm-6">
				<h3>기본정보 입력</h3>
			</div>
			<div class="col-sm-6">
						<button class="btn btn-default float-right" style="margin-left: 20px;" type="button">취소</button>
						<button class="btn btn-info float-right" style="margin-left: 20px;" type="button">저장</button>
					</div>
		</div>
	</div>
</section>

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card card-outline card-info">
				<div class="card-header p-2">
					<div class="text-center">
						<img class="profile-user-img img-fluid img-circle"
							src="../resources/images/indexPage/chopa.jpg" alt=""
							style="width: 200px;">
					</div>
					<h3 class="profile-username text-center">chopa</h3>
					<div class="input-group"
						style="margin-right: auto; margin-left: auto; width: 50%;">
						<div class="custom-file">
							<input type="file" class="custom-file-input"
								id="exampleInputFile"> <label class="custom-file-label"
								for="exampleInputFile"></label>
						</div>
						<span class="input-group-append">
							<button type="button" class="btn btn-secondary btn-append">Upload</button>
						</span>
					</div>

				</div>
				<div class="card-body">
					<div class="tab-content">
						<div class="tab-pane active">
							<form class="form-horizontal">
								<div class="form-group row">
									<label for="inputEno" class="col-sm-2 col-form-label">사번</label>
									<div class="col-sm-10">
										<input type="text" class="form-control" id="inputEno"
											placeholder="">
									</div>
								</div>
								<div class="form-group row">
									<label for="inputName" class="col-sm-2 col-form-label">이름</label>
									<div class="col-sm-10">
										<input type="email" class="form-control" id="inputName"
											placeholder="">
									</div>
								</div>
								<div class="form-group row">
									<label for="inputPwd" class="col-sm-2 col-form-label">비밀번호</label>
									<div class="col-sm-10">
										<input type="text" class="form-control" id="inputPwd"
											placeholder="">
									</div>
								</div>
								<div class="form-group row">
									<label for="inputEmail" class="col-sm-2 col-form-label">이메일</label>
									<div class="col-sm-9">
										<input type="email" class="form-control" id="inputEmail"
											placeholder="">
									</div>
									<div class="col-sm-0">
										<button type="button" class="btn btn-info" data-toggle="modal"
											data-target="#modal-default">인증</button>
									</div>
								</div>
								<div class="form-group row">
									<label for="inputPhone" class="col-sm-2 col-form-label">휴대폰</label>
									<div class="col-sm-10">
										<input type="email" class="form-control" id="inputPhone"
											placeholder="">
									</div>
								</div>
								<div class="form-group row">
									<label for="inputPhone" class="col-sm-2 col-form-label">MBTI</label>
									<div class="col-sm-10">
										<select class="custom-select">
											<option>ISTJ</option>
											<option>ISFJ</option>
											<option>INFJ</option>
											<option>INTJ</option>
											<option>ISTP</option>
											<option>ISFP</option>
											<option>INFP</option>
											<option>IFTP</option>
											<option>ESTP</option>
											<option>ENFP</option>
											<option>ENTP</option>
											<option>ESTJ</option>
											<option>ESFJ</option>
											<option>ENFJ</option>
											<option>ENTJ</option>
										</select>
									</div>
								</div>

								<div class="input-group row">
									<label for="inputPost" class="col-sm-2 col-form-label">우편번호</label>
									<div class="input-group input-group-md col-sm-5">
										<input type="text" class="form-control" id="inputPost"
											readonly> <span class="input-group-append">
											<button type="button"
												class="btn btn-default btn-sm btn-append">
												<i class="fa fa-fw fa-search"></i>
											</button>
										</span>
									</div>
								</div>
								<br>
								<div class="form-group row">
									<label for="inputAdd" class="col-sm-2 col-form-label">주소</label>
									<div class="col-sm-10">
										<input type="email" class="form-control" id="inputAdd"
											readonly>
									</div>
								</div>
								<div class="form-group row">
									<label for="inputAdd2" class="col-sm-2 col-form-label">상세주소</label>
									<div class="col-sm-10">
										<input type="email" class="form-control" id="inputAdd2"
											placeholder="">
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<div class="modal fade show" id="modal-default" style="display: none;"
	aria-modal="true" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<p class="modal-title">해당 이메일로 인증번호를 발송했습니다.</p>
				<button type="button" class="close" data-dismiss="modal"
					aria-label="Close">
					<span aria-hidden="true">×</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="form-group row">
					<div class="input-group input-group-md">
						<input type="text"
							class="form-control form-control-border border-width-3"
							placeholder="인증번호입력">
					</div>
				</div>
			</div>
			<div class="modal-footer justify-content-between">
				<button type="button" class="btn btn-default" data-dismiss="modal">취소</button>
				<button type="button" class="btn btn-info">확인</button>
			</div>
		</div>
	</div>
</div>

